<h1>OpenCode 12</h1>

<p>Below is a list of our users.
  Why donâ€™t you <%= link_to 'sign up', new_user_path %> too?</p>

<ul>
  <% @users.each do |user| %>
    <li>
      <b><%= mail_to user.email %></b><br>
      <% case %>
      <% when user.company.name? && user.company.website? %>
        <%= link_to user.company.name, user.company.website_url %>
      <% when user.company.name? && !user.company.website? %>
        <%= user.company.name %>
      <% when !user.company.name? && user.company.website? %>
        <%= link_to user.company.website_host, user.company.website_url %>
      <% end %>
    </li>
  <% end %>
</ul>
